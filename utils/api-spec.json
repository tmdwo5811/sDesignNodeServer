{
    "swagger": "2.0",
    "info": {
      "title": "sDesign API 문서",
      "description": "",
      "version": "1.0"
    },
    "produces": [
      "application/json"
    ],
    "paths": {
      "/api/create/account": {
        "post": {
          "tags": [
            "Account"
          ],
          "description": "회원 가입 API, 사용자 아이디(E-mail), Password, 닉네임 3개를 입력해야 합니다.",
          "parameters": [
            {
              "name": "data",
              "in": "body",
              "type": "object",
              "properties": {
                "accountEmail": {
                  "type": "string",
                  "required": true
                },
                "accountPw": {
                  "type": "string",
                  "required": true
                },
                "accountName": {
                  "type": "string",
                  "required": true
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "[완료]가입이 정상적으로 완료되었습니다.",
              "content": {
                "application/json": {},
                "application/xml": {}
              }
            },
            "409": {
              "description": "[에러]사용자 아이디가 이미 존재하여 회원 가입이 실패하였습니다.",
              "content": {
                "application/json": {},
                "application/xml": {}
              }
            },
            "500": {
              "description": "[에러]서버에 문제가 있어 회원 가입에 실패하였습니다.",
              "content": {
                "application/json": {},
                "application/xml": {}
              }
            }
          }
        }
      },
      "/api/login": {
        "post": {
          "tags": [
            "Account"
          ],
          "description": "로그인 API 사용자의 Email 아이디와 암호를 입력해야 합니다.",
          "parameters": [
            {
              "name": "data",
              "in": "body",
              "type": "object",
              "required":true,
              "properties": {
                "accountEmail": {
                  "type": "string"
                },
                "accountPw": {
                  "type": "string"
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "[완료]로그인이 완료되었습니다",
              "content": {
                "application/json": {},
                "application/xml": {}
              }
            },
            "401": {
              "description": "[에러]비밀번호가 맞지 않아 로그인에 실패하였습니다",
              "content": {
                "application/json": {},
                "application/xml": {}
              }
            },
            "500": {
              "description": "[에러]서버에 문제가 있어 로그인하지 못했습니다",
              "content": {
                "application/json": {},
                "application/xml": {}
              }
            }
          }
        }
      },
      "/api/upload/file": {
        "post": {
          "tags": [
            "Sound"
          ],
          "description": "파일 업로드시 사용되는 api 입니다.",
          "consumes":"multipart/form-data",
          "parameters": [
            {
              "name": "token",
              "in": "header",
              "description":"jwt Token",
              "required": true,
              "type": "string"
            },
            {
              "name": "userFile",
              "in": "formData",
              "type": "file",
              "required":true
            },
            {
              "name": "soundName",
              "in": "formData",
              "type": "string",
              "required":true
            },
            {
              "name": "category",
              "in": "formData",
              "type": "string"
            },
            {
              "name": "tags",
              "in": "formData",
              "type": "array",
              "items":{
                "type": "string"
              },
              "collectionFormat":"multi",
              "required": true
            }
          ],
          "responses": {
            "200": {
              "description": "[완료] 업로드가 성공 되었습니다.",
              "content": {
                "application/json": {},
                "application/xml": {}
              }
            }
          }
        }
      },
      "/api/update/profile": {
        "post": {
          "tags": [
            "Account"
          ],
          "description": "프로필 수정 api 프로필 이미지, 닉네임 수정 기능",
          "consumes":"multipart/form-data",
          "parameters": [
            {
              "name": "token",
              "in": "header",
              "description":"jwt Token",
              "required": true,
              "type": "string"
            },
            {
              "name": "userImg",
              "in": "formData",
              "type": "file"
            },
            {
              "name": "accountName",
              "in": "formData",
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "[완료] 업로드가 성공 되었습니다.",
              "content": {
                "application/json": {},
                "application/xml": {}
              }
            }
          }
        }
      },
      "/api/token/test": {
        "get": {
          "tags": [
            "Account"
          ],
          "description": "토큰 디코드 테스트 api",
          "parameters": [
            {
              "name": "token",
              "in": "header",
              "description": "jwt Token",
              "required": true,
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "[완료]가입이 정상적으로 완료되었습니다.",
              "content": {
                "application/json": {},
                "application/xml": {}
              }
            },
            "409": {
              "description": "[에러]사용자 아이디가 이미 존재하여 회원 가입이 실패하였습니다.",
              "content": {
                "application/json": {},
                "application/xml": {}
              }
            },
            "500": {
              "description": "[에러]서버에 문제가 있어 회원 가입에 실패하였습니다.",
              "content": {
                "application/json": {},
                "application/xml": {}
              }
            }
          }
        }
      },
      "/api/get/profile/info": {
        "get": {
          "tags": [
            "Account"
          ],
          "description": "토큰 기반 프로필 데이터 조회",
          "parameters": [
            {
              "name": "token",
              "in": "header",
              "description": "jwt Token",
              "required": true,
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "[완료]가입이 정상적으로 완료되었습니다.",
              "content": {
                "application/json": {},
                "application/xml": {}
              }
            },
            "409": {
              "description": "[에러]사용자 아이디가 이미 존재하여 회원 가입이 실패하였습니다.",
              "content": {
                "application/json": {},
                "application/xml": {}
              }
            },
            "500": {
              "description": "[에러]서버에 문제가 있어 회원 가입에 실패하였습니다.",
              "content": {
                "application/json": {},
                "application/xml": {}
              }
            }
          }
        }
      },
      "/api/get/soundList": {
        "get": {
          "tags": [
            "Sound"
          ],
          "description": "업로드된 Sound 전체 목록 조회, 페이징 적용 Ver",
          "parameters": [
            {
              "name": "next",
              "in": "query",
              "description": "next code",
              "type": "string"
            },
            {
              "name": "previous",
              "in": "query",
              "description": "previous code",
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "result",
              "content": {
                "application/json": {},
                "application/xml": {}
              }
            }
          }
        }
      },
      "/api/get/my/soundList": {
        "get": {
          "tags": [
            "Sound"
          ],
          "description": "내가 업로드한 Sound 목록 조회, 페이징 적용 Ver",
          "parameters": [
            {
              "name": "token",
              "in": "header",
              "description": "jwt Token",
              "required": true,
              "type": "string"
            },
            {
              "name": "next",
              "in": "query",
              "description": "next code",
              "type": "string"
            },
            {
              "name": "previous",
              "in": "query",
              "description": "previous code",
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "result",
              "content": {
                "application/json": {},
                "application/xml": {}
              }
            }
          }
        }
      },
      "/api/remove/my/sound": {
        "post": {
          "tags": [
            "Sound"
          ],
          "description": "내 Sound 삭제 하기 api",
          "parameters": [
            {
              "name": "token",
              "in": "header",
              "description":"jwt Token",
              "required": true,
              "type": "string"
            },
            {
              "name": "data",
              "in": "body",
              "type": "object",
              "required":true,
              "properties":{
                "soundId":{
                  "type":"string"
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "[완료] 업로드가 성공 되었습니다.",
              "content": {
                "application/json": {},
                "application/xml": {}
              }
            }
          }
        }
      },
      "/api/search/sound": {
        "get": {
          "tags": [
            "Sound"
          ],
          "description": "사운드 검색 api",
          "parameters": [
            {
              "name": "keyword",
              "in": "query",
              "description": "검색어",
              "required": true,
              "type": "string"
            },
            {
              "name": "next",
              "in": "query",
              "description": "다음 페이지 해쉬 코드",
              "type": "string"
            },
            {
              "name": "previous",
              "in": "query",
              "description": "이전 페이지 해쉬 코드",
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "[검색 성공]",
              "content": {
                "application/json": {},
                "application/xml": {}
              }
            }
          }
        }
      },
      "/api/confirm/account": {
        "get": {
          "tags": [
            "Account"
          ],
          "description": "이메일 인증 api",
          "operationId": "confirm By accountId",
          "consumes": [
            "application/json"
          ],
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "hashValue",
              "in": "query",
              "description": "계정 고유 id + 1",
              "required": true,
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "[완료] 이메일 인증이 완료되었습니다",
              "content": {
                "application/json": {},
                "application/xml": {}
              }
            }
          }
        }
      }
    }
  }